/**app.wxss**/

/**
 * 主题颜色定义（统一使用以下颜色）
 * Theme Colors:
 * - 主题蓝色文字/边框: #1d4ed8
 * - 主题蓝色背景: #e5f0ff
 * - 按钮的背景色: #3B82F6
 * 
 * 使用场景：
 * - 工作标签tag: 背景 #e5f0ff, 文字 #1d4ed8
 * - 筛选按钮: 背景 #e5f0ff, 文字 #1d4ed8
 * - Tab选中状态: 背景 #e5f0ff, 文字 #1d4ed8
 * - 按钮背景色: #3B82F6 (用于生成简历按钮、一键申请按钮、筛选确定按钮等)
 * - 其他需要强调的元素
 */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 公共头部样式 - 供 job-detail 和 drawer 组件复用 */
.detail-header {
  padding: 40rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.back-hit {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-button {
  width: 16rpx;
  height: 16rpx;
  border-left: 5rpx solid #111827;
  border-bottom: 5rpx solid #111827;
  transform: rotate(45deg);
  margin-left: 40rpx;
}

.back-button::after {
  content: '';
}

/* --- Common Bottom Sheet Styles (复用弹窗样式) --- */
/* 蒙版样式 */
.bottom-sheet-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 2499;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), visibility 0.3s step-end;
  will-change: opacity;
  backface-visibility: hidden;
}

.bottom-sheet-mask-open {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), visibility 0s step-start;
}

/* 弹窗基础样式 */
.bottom-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 85vh;
  background: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  transform: translate3d(0, 100%, 0);
  -webkit-transform: translate3d(0, 100%, 0);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), visibility 0.3s step-end;
  z-index: 2500;
  display: flex;
  flex-direction: column;
  will-change: transform;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.05); /* 添加顶部阴影 */
  margin: 0;
  padding: 0;
  visibility: hidden;
  pointer-events: none;
}

.bottom-sheet-open {
  transform: translate3d(0, 0, 0);
  -webkit-transform: translate3d(0, 0, 0);
  visibility: visible;
  pointer-events: auto;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), visibility 0s step-start;
}

/* 弹窗头部基础样式 */
.bottom-sheet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 40rpx;
  margin: 0;
  position: relative;
  flex-shrink: 0;
}

.bottom-sheet-header-left,
.bottom-sheet-header-right {
  flex: 1;
  display: flex;
  align-items: center;
  z-index: 2;
  height: 100%;
}

.bottom-sheet-header-right {
  justify-content: flex-end;
}

/* 弹窗标题基础样式 */
.bottom-sheet-title {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  text-align: center;
  z-index: 1;
  white-space: nowrap;
}

/* 弹窗头部按钮样式 (供取消、保存等操作复用) */
.bottom-sheet-header-btn {
  font-size: 28rpx;
  font-weight: 500;
  color: #64748b;
  padding: 16rpx 24rpx;
  background: transparent;
  border-radius: 12rpx;
  line-height: 1;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-sheet-header-btn.primary {
  color: #2e5fe9;
}

.bottom-sheet-header-btn:active {
  background: #f1f5f9;
}

/* 弹窗内容基础样式 */
.bottom-sheet-content {
  flex: 1;
  overflow-y: auto;
  padding: 0; /* 移除所有默认内边距 */
  margin: 0;
  box-sizing: border-box;
}

/* --- Global Button Styles --- */
.btn-primary {
  flex: 1;
  height: 75rpx;
  background-color: #1d4ed8;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-secondary {
  flex: 1;
  height: 75rpx;
  background-color: #f1f5f9;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #64748b;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.btn-secondary:active {
  background-color: #e2e8f0;
}

/* --- Global Professional UI Elements --- */

/* 1. 流光加载圆环 - 适用于各种需要内嵌 Loading 的场景 */
.ui-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #f1f5f9;
  border-top: 4rpx solid #2e5fe9;
  border-radius: 50%;
  animation: ui-spin 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  display: inline-block;
}

@keyframes ui-spin {
  to { transform: rotate(360deg); }
}

/* 2. 交互态统一优化 */
.hover-opacity {
  opacity: 0.7;
  transition: opacity 0.2s;
}

.active-scale {
  transform: scale(0.97);
  transition: transform 0.1s;
}

