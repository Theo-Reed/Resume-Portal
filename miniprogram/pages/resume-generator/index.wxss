.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: var(--bg-page);
  color: var(--text-main);
}

@media (prefers-color-scheme: dark) {
  .page {
    background: linear-gradient(135deg, #0f1113 0%, #16191d 100%);
    color: #e2e2e6;
  }
}

.form-content {
  flex: 1;
  overflow: hidden;
}

.form-body {
  padding: 32rpx;
  padding-bottom: 0; /* 页面到底部留白设为 0 */
}

.header-section {
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  color: var(--text-main);
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--text-sub);
}

.form-item {
  margin-bottom: 26rpx; /* 间隙 +10rpx (从16rpx增加到26rpx) */
  background: var(--bg-card);
  padding: 24rpx; /* 更均匀的内边距 */
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border);
}

@media (prefers-color-scheme: dark) {
  .form-item {
    background: var(--bg-card); /* 使用标准变量 */
    border: 1rpx solid var(--divider);
  }
}

.label {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: var(--text-sub);
  letter-spacing: 0.5rpx;
}

.input {
  height: 88rpx;
  background: var(--bg-page);
  border-radius: var(--radius-sm);
  padding: 0 24rpx;
  font-size: 28rpx; /* 字体减少 (从30rpx减少到28rpx) */
  border: 1rpx solid var(--divider);
  color: var(--text-main);
  transition: all 0.2s ease;
}

.input:focus {
  border-color: var(--primary);
  background: var(--bg-card);
}

.textarea {
  width: auto;
  min-height: 360rpx;
  background: var(--bg-page);
  border-radius: var(--radius-sm);
  padding: 24rpx;
  font-size: 28rpx; /* 字体减少 (从30rpx减少到28rpx) */
  line-height: 1.6;
  border: 1rpx solid var(--divider);
  color: var(--text-main);
  transition: all 0.2s ease;
}

.textarea:focus {
  border-color: var(--primary);
  background: var(--bg-card);
}

.placeholder {
  color: var(--text-holder);
}
