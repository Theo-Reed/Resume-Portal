.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: var(--page-background);
  color: var(--text-primary);
}

.form-content {
  flex: 1;
  overflow: hidden;
}

.form-body {
  padding: 32rpx;
}

.header-section {
  margin-bottom: 48rpx;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary, #999);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.input {
  height: 88rpx;
  background: var(--bg-secondary, #f7f7f7);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 1rpx solid var(--divider, #e5e5e5);
}

.textarea {
  width: auto;
  min-height: 400rpx;
  background: var(--bg-secondary, #f7f7f7);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: 1rpx solid var(--divider, #e5e5e5);
}

.placeholder {
  color: var(--text-placeholder, #ccc);
}
