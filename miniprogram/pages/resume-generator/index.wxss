.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: var(--page-background);
  color: var(--text-primary);
}

.form-content {
  flex: 1;
  overflow: hidden;
}

.form-body {
  padding: 32rpx;
}

.header-section {
  margin-bottom: 48rpx;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary, #999);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.input {
  height: 88rpx;
  background: var(--bg-secondary, #f7f7f7);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 1rpx solid var(--divider, #e5e5e5);
}

.textarea {
  width: auto;
  min-height: 400rpx;
  background: var(--bg-secondary, #f7f7f7);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: 1rpx solid var(--divider, #e5e5e5);
}

.placeholder {
  color: var(--text-placeholder, #ccc);
}

/* Bottom bar styles - copied from job-detail */
.apply-overlay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}

.apply-overlay-mask {
  position: absolute;
  top: -60rpx;
  left: 0;
  right: 0;
  height: calc(100% + 60rpx);
  background: linear-gradient(to bottom, transparent, var(--page-background) 60rpx);
  pointer-events: none;
}

.apply-dock-content {
  position: relative;
  padding: 20rpx 32rpx 32rpx;
  display: flex;
  justify-content: center;
}

.apply-button {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.apply-button.disabled {
  background: var(--bg-tertiary, #eeeeee);
  color: var(--text-disabled, #bbbbbb);
}

.apply-button.active {
  background: var(--brand-blue, #007aff);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.apply-button-active {
  opacity: 0.8;
  transform: scale(0.98);
}

.apply-text {
  font-size: 32rpx;
  font-weight: 600;
}
