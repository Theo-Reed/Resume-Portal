          </view>
        </view>
        <textarea 
          class="textarea {{validation.aiMessage}}" 
          placeholder="ç»™ AI çš„æç¤ºè¯..." 
          placeholder-class="placeholder"
          value="{{aiMessage}}" 
          bindinput="onFieldChange" 
          data-field="aiMessage"
          maxlength="-1"
          auto-height="{{false}}"
        ></textarea>
      </view>
    </view>
  </scroll-view>

  <ui-dock-button 
    text="ç”Ÿæˆç®€å†" 
    width="42.5%"
