/* 个人资料底部弹窗样式 - 提取公共部分 */

/* Header 相关的样式已移动至 app.wxss 公共部分 */

/* Content Layout */
.profile-sheet-content {
    display: flex;
    flex-direction: column;
    gap: 2rpx;
    padding: 0;
}

/* --- 公共基础样式 --- */

/* 卡片基础样式 */
.profile-avatar-section,
.profile-info-section {
    background: #fff;
    border-radius: 0;
    padding: 32rpx 40rpx;
    box-shadow: none;
    border-bottom: 1rpx solid var(--border);
}

/* Title 基础样式 */
.profile-avatar-title,
.profile-nickname-title,
.profile-phone-title,
.profile-expired-title {
    font-size: 30rpx;
    color: #1f2933;
    font-weight: 500;
    line-height: 1;
    margin: 0;
    padding: 0;
    display: block;
}

/* Change 按钮基础样式 */
.profile-nickname-change-btn,
.profile-phone-change-btn {
    height: 45rpx !important;
    min-height: 45rpx !important;
    max-height: 45rpx !important;
    padding: 0 !important;
    border-radius: 18rpx !important;
    background-color: #e5f0ff !important;
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    flex: 0 0 auto !important;
    box-sizing: border-box !important;
    width: 102rpx !important; /* 固定宽度以保证中心点对齐: 127rpx * 4/5 = 101.6rpx */
    min-width: 102rpx !important;
    margin: 0 !important;
    margin-right: 12.5rpx !important; /* 计算值: 63.5 (头像中心) - 51 (按钮中心) = 12.5rpx */
    border: none !important;
    outline: none !important;
    line-height: 1 !important;
}

/* Change 按钮文字基础样式 */
.profile-nickname-change-btn-text,
.profile-phone-change-btn-text {
    font-size: 25rpx;
    color: var(--primary-dark);
    line-height: 1;
    display: block;
    padding: 0;
    margin: 0;
    font-weight: 500 !important;
    font-family: inherit;
}

/* 显示的值 (Value) 基础样式 */
.profile-nickname-value,
.profile-phone-value {
    font-size: 28rpx;
    color: rgb(31 41 51 / 80%);
    line-height: 1.5;
}

/* ========== 上传头像 Section - 特有样式 ========== */
.profile-avatar-section {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    tap-highlight-color: transparent;
    min-height: 120rpx;
}

.profile-avatar-content {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.profile-avatar-wrapper {
    width: 127rpx;
    height: 127rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.profile-avatar-bordered {
    border: 2rpx solid #e5e7eb;
    border-radius: 50%;
    padding: 4rpx;
    box-sizing: border-box;
}

.profile-avatar-preview,
.profile-avatar-placeholder {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.profile-avatar-placeholder {
    background-color: #e0e0e0;
}

/* ========== 信息卡片 Section - 特有样式 ========== */
.profile-info-section {
    display: flex;
    flex-direction: column;
}

.profile-info-item {
    display: flex;
    flex-direction: column;
}

.profile-info-item:not(:last-child) {
    padding-bottom: 32rpx;
    margin-bottom: 32rpx;
    border-bottom: 1rpx solid #f3f4f6;
}

.profile-nickname-header,
.profile-phone-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 45rpx;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 15rpx;
}

.profile-nickname-content,
.profile-phone-content {
    display: flex;
    align-items: center;
    min-height: 40rpx;
}

/* ========== 编辑用户名 Modal - 独立样式 ========== */
.nickname-modal-mask {
    position: fixed;
    inset: 0;
    background: rgb(0 0 0 / 15%);
    z-index: 2600;
    opacity: 0;
    transition: opacity 0.2s ease;
    pointer-events: none;
}

.nickname-modal-mask-open {
    opacity: 1;
    pointer-events: auto;
}

.nickname-modal {
    position: fixed;
    left: 50%;
    top: 40%;
    transform: translate3d(-50%, -50%, 0) scale(0.9);
    transform: translate3d(-50%, -50%, 0) scale(0.9);
    width: 80vw;
    background: #fff;
    border-radius: 50rpx;
    z-index: 2601;
    opacity: 0;
    transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform, opacity;
    display: flex;
    flex-direction: column;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    box-shadow: 0 25rpx 70rpx rgb(0 0 0 / 18%);
    pointer-events: none;
}

.nickname-modal-open {
    opacity: 1;
    transform: translate3d(-50%, -50%, 0) scale(1);
    transform: translate3d(-50%, -50%, 0) scale(1);
    pointer-events: auto;
}

.nickname-modal-header {
    margin-bottom: 35rpx;
    text-align: center;
    display: flex;
    justify-content: center;
}

.nickname-modal-title {
    font-size: 34rpx;
    font-weight: 700;
    color: #1f2933;
    line-height: 1;
}

.nickname-modal-body {
    margin-bottom: 40rpx;
}

.nickname-modal-input {
    width: 100%;
    height: 80rpx;
    background: #fff;
    border: 2rpx solid var(--divider);
    border-radius: 20rpx;
    padding: 0 25rpx;
    font-size: 30rpx;
    color: #1f2933;
    box-sizing: border-box;
}

.nickname-modal-footer {
    display: flex;
    gap: 20rpx;
}

.nickname-modal-btn {
    flex: 1;
    height: 80rpx;
    border-radius: 25rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nickname-modal-cancel {
    background: var(--border);
}

.nickname-modal-cancel .nickname-modal-btn-text {
    color: #4f7ef7;
}

.nickname-modal-save {
    background:rgb(73 121 252);
}

.nickname-modal-save .nickname-modal-btn-text {
    color: #fff;
}

.nickname-modal-btn-text {
    font-size: 30rpx;
    font-weight: 600;
}

/* ========== 过期日期 Item - 特有样式 ========== */
.profile-expired-item {
    margin-top: 15rpx;
    margin-bottom: 10rpx;
}

.profile-expired-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 45rpx;
    width: 100%;
    box-sizing: border-box;
}

.profile-expired-title-wrapper,
.profile-expired-value-wrapper {
    display: flex;
    align-items: center;
    height: 45rpx;
}

.profile-expired-value {
    font-size: 30rpx;
    line-height: 45rpx;
    margin: 0;
    padding: 0;
    display: block;
}

.profile-expired-value-active {
    color: var(--primary-dark);
    font-weight: 500;
}

.profile-expired-value-expired {
    color: #9ca3af;
}
