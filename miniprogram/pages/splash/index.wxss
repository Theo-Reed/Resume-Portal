.splash-container {
  width: 100vw;
  height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* Background Decoration */
.splash-container::before {
  content: '';
  position: absolute;
  top: -20%;
  right: -20%;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(37, 99, 235, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.splash-container::after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: -10%;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.logo-box {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  box-shadow: 0 30rpx 60rpx rgba(37, 99, 235, 0.3);
  position: relative;
  overflow: hidden;
  animation: float 3s ease-in-out infinite;
}

/* Shine effect on logo */
.logo-box::after {
  content: "";
  position: absolute;
  top: -100%;
  left: -100%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  animation: shine 2.5s infinite;
}

.logo-text {
  color: #ffffff;
  font-size: 64rpx;
  font-weight: 900;
  letter-spacing: -2rpx;
}

.app-info {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.app-name {
  font-size: 40rpx;
  font-weight: 800;
  color: #0f172a;
  margin-bottom: 24rpx;
  letter-spacing: 6rpx;
  display: block;
  opacity: 0;
  animation: slideUp 0.8s ease-out 0.2s forwards;
}

.loading-dots {
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.dot {
  width: 14rpx;
  height: 14rpx;
  background: #cbd5e1;
  border-radius: 50%;
  animation: wave 1.2s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: 0s; }
.dot:nth-child(2) { animation-delay: 0.1s; }
.dot:nth-child(3) { animation-delay: 0.2s; }

@keyframes float {
  0%, 100% { transform: translateY(0); box-shadow: 0 30rpx 60rpx rgba(37, 99, 235, 0.3); }
  50% { transform: translateY(-10rpx); box-shadow: 0 40rpx 70rpx rgba(37, 99, 235, 0.25); }
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes wave {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.5; }
  40% { transform: scale(1.4); opacity: 1; background: #3b82f6; }
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(0deg); }
  20%, 100% { transform: translateX(100%) translateY(100%) rotate(0deg); }
}
