/* miniprogram/pages/favorites/index.wxss */
.favorites-page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.favorites-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
}

.back-button {
  width: 16rpx;
  height: 16rpx;
  border-left: 5rpx solid #111827;
  border-bottom: 5rpx solid #111827;
  transform: rotate(45deg);
  margin-right: 18rpx;
}

.favorites-title {
  font-size: 34rpx;
  font-weight: bold;
}

.loading,
.empty-state {
  padding: 120rpx 0;
  text-align: center;
  color: #9ca3af;
}

.favorites-list {
  flex: 1;
}

.favorite-item {
  padding: 32rpx;
  margin: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.04);
}

.favorite-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.favorite-meta {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #6b7280;
  display: flex;
  gap: 24rpx;
}

.favorite-salary {
  color: #ef4444;
}
