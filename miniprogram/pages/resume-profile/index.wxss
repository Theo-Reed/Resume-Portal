/* miniprogram/pages/resume-profile/index.wxss */
.page {
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  position: relative;
}

.resume-content {
  flex: 1;
  height: 0;
}

.resume-body {
  padding: 24rpx 43rpx;
  padding-bottom: 40rpx;
}

.resume-section {
  margin-bottom: 32rpx;
}

.resume-section-header {
  margin-bottom: 16rpx;
}

.resume-section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.resume-section-content {
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04), 
              1rpx 2rpx 8rpx rgba(0, 0, 0, 0.05),
              -1rpx 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.resume-text {
  font-size: 28rpx;
  color: #111827;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-word;
}

.resume-photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  display: block;
}

.resume-photo-placeholder {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.resume-photo-placeholder-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.education-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.education-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.education-item:first-child {
  padding-top: 0;
}

.education-school {
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.education-date {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
}

.certificate-item {
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.certificate-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.certificate-item:first-child {
  padding-top: 0;
}

.certificate-text {
  font-size: 28rpx;
  color: #111827;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-word;
}

