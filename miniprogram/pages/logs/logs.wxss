page {
  height: 100vh;
  background-color: #f8fafc;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.maintenance-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.icon-box {
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 24rpx rgb(0 0 0 / 5%);
}

.maintenance-icon {
  font-size: 80rpx;
}

.maintenance-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #0f172a;
  margin-bottom: 24rpx;
}

.maintenance-desc {
  font-size: 28rpx;
  color: var(--text-sub);
  line-height: 1.6;
  margin-bottom: 80rpx;
}

.refresh-hint {
  font-size: 24rpx;
  color: var(--text-holder);
  padding: 20rpx 40rpx;
  border: 1rpx solid var(--divider);
  border-radius: 100rpx;
}

.empty-view {
  color: var(--text-holder);
}
