.page {
  min-height: 100vh;
  background: #f5f7fb;
  box-sizing: border-box;
  padding: 0rpx 32rpx; /* Reduced top padding from 40rpx to 20rpx */
  /* Disable bounce effect and scrollbars */
  overflow: hidden;
  -webkit-overflow-scrolling: auto;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.page::-webkit-scrollbar {
  display: none;
}

.content {
  margin-top: 30rpx; /* Reduced by 15rpx from 40rpx */
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1f2933;
}

.desc {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #6b7280;
}

/* Articles */
.article {
  margin-top: 12rpx; /* Reduced from 48rpx */
}

.article:first-child {
  margin-top: 0;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2933;
  margin-bottom: 24rpx;
}

.article-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.article-all {
  font-size: 26rpx;
  color: #1d4ed8;
  padding: 6rpx 8rpx;
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx; /* Match job-card margin-bottom */
}

.article-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  position: relative; /* For absolute positioning of badge */
  margin-bottom: 8rpx; /* Add margin-bottom */
}

.article-card:last-child {
  margin-bottom: 24rpx; /* Match job-card margin-bottom */
}

.article-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.article-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1;
  z-index: 10;
}

.article-badge-text {
  color: #ffffff;
}

.article-badge-active {
  background-color: rgb(39, 66, 215); /* Blue for active */
}

.article-badge-ended {
  background-color: #6b7280; /* Gray for ended */
}

.article-badge-upcoming {
  background-color: #f59e0b; /* Orange for upcoming */
}

.article-badge-ongoing {
  background-color: #10b981; /* Green for ongoing */
}

.article-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 120rpx; /* Same as image height */
  overflow: hidden;
}

.article-title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2933;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-description {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
