.page {
  min-height: 100vh;
  background: #f5f7fb;
  box-sizing: border-box;
  padding: 40rpx 32rpx;
}

.content {
  margin-top: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1f2933;
}

.desc {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #6b7280;
}

/* Community Activities */
.activities-section {
  margin-top: 48rpx;
}

.activities-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2933;
  margin-bottom: 24rpx;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  position: relative; /* For absolute positioning of badge */
}

.activity-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.activity-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1;
  z-index: 10;
}

.activity-badge-text {
  color: #ffffff;
  font-size: 20rpx;
}

.activity-badge-active {
  background-color:rgb(39, 66, 215); /* Green for active */
}

.activity-badge-ended {
  background-color: #6b7280; /* Gray for ended */
}

.activity-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 120rpx; /* Same as image height */
  overflow: hidden;
}

.activity-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2933;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.activity-description {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

