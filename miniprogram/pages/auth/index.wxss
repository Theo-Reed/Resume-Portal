.page-container {
  min-height: 100vh;
  background: #f8fafc;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}

/* Background Decor Circles */
.bg-circle-1 {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
  background: linear-gradient(135deg, #3b82f622, #2563eb11);
  border-radius: 50%;
  top: -100rpx;
  right: -100rpx;
  z-index: 0;
}

.bg-circle-2 {
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #10b98111, #3b82f611);
  border-radius: 50%;
  bottom: -50rpx;
  left: -100rpx;
  z-index: 0;
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding-top: 160rpx;
}

.brand-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: #2563eb;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 20rpx 40rpx rgba(37, 99, 235, 0.2);
  margin-bottom: 24rpx;
}

.logo-text {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 800;
  letter-spacing: -2rpx;
}

.logo-dot {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: #10b981;
  border-radius: 50%;
  bottom: 30rpx;
  right: 25rpx;
}

.app-name {
  font-size: 44rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: #64748b;
  letter-spacing: 2rpx;
}

/* Auth Card */
.auth-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 48rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.05);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
}

.tabs {
  display: flex;
  margin-bottom: 60rpx;
  justify-content: center;
}

.tab {
  margin: 0 40rpx;
  padding: 10rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab text {
  font-size: 32rpx;
  color: #94a3b8;
  font-weight: 500;
}

.tab.active text {
  color: #1e293b;
  font-weight: 700;
}

.active-bar {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 6rpx;
  background: #2563eb;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.tab.active .active-bar {
  width: 40rpx;
}

/* Form Section */
.form-section {
  display: flex;
  flex-direction: column;
}

.input-item {
  display: flex;
  align-items: center;
  background: #f1f5f9;
  border-radius: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
  height: 110rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.input-item:focus-within {
  background: #ffffff;
  border-color: #2563eb;
  box-shadow: 0 0 0 4rpx rgba(37, 99, 235, 0.05);
}

.input-icon {
  margin-right: 20rpx;
  font-size: 32rpx;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #1e293b;
}

.placeholder {
  color: #94a3b8;
}

/* Action Section */
.action-section {
  margin-top: 20rpx;
}

.submit-btn {
  width: 100% !important;
  height: 110rpx;
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 20rpx 40rpx rgba(37, 99, 235, 0.25);
  padding: 0;
  transition: all 0.2s ease;
}

.btn-hover {
  transform: translateY(2rpx);
  box-shadow: 0 10rpx 20rpx rgba(37, 99, 235, 0.2);
}

.btn-arrow {
  margin-left: 12rpx;
  font-size: 36rpx;
  font-weight: normal;
}

/* Footer */
.footer-links {
  margin-top: 48rpx;
  text-align: center;
}

.protocol {
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.6;
}

.link {
  color: #2563eb;
  font-weight: 500;
  padding: 0 4rpx;
}
