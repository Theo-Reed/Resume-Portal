<view class="page-container">
  <!-- Background Decor -->
  <view class="bg-circle-1"></view>
  <view class="bg-circle-2"></view>
  
  <view class="content-wrapper">
    <view class="brand-section">
      <view class="logo">
        <text class="logo-text">CV</text>
        <view class="logo-dot"></view>
      </view>
      <view class="app-name">Remote Jobs</view>
      <view class="app-slogan">精选全球远程机会</view>
    </view>

    <view class="auth-card">
      <view class="tabs">
        <view class="tab {{type === 'login' ? 'active' : ''}}" bindtap="switchType" data-type="login">
          <text>登录</text>
          <view class="active-bar"></view>
        </view>
        <view class="tab {{type === 'register' ? 'active' : ''}}" bindtap="switchType" data-type="register">
          <text>注册</text>
          <view class="active-bar"></view>
        </view>
      </view>

      <view class="form-section">
        <view class="input-item">
          <view class="input-icon">
            <text class="iconfont icon-phone">📱</text>
          </view>
          <input 
            class="input-field" 
            type="number" 
            placeholder="手机号" 
            placeholder-class="placeholder"
            model:value="{{phone}}" 
          />
        </view>

        <view class="input-item">
          <view class="input-icon">
            <text class="iconfont icon-lock">🔒</text>
          </view>
          <input 
            class="input-field" 
            type="password" 
            placeholder="密码" 
            placeholder-class="placeholder"
            model:value="{{password}}" 
          />
        </view>

        <view class="action-section">
          <button class="submit-btn" bindtap="handleSubmit" hover-class="btn-hover">
            <text>{{ type === 'login' ? '立即登录' : '开启职业新旅程' }}</text>
            <view class="btn-arrow">→</view>
          </button>
        </view>
      </view>

      <view class="footer-links">
        <view class="protocol">
          注册即代表同意 <text class="link">用户协议</text> 与 <text class="link">隐私政策</text>
        </view>
      </view>
    </view>
  </view>
</view>
