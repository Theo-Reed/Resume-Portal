/* miniprogram/pages/job-detail/index.wxss */
.page {
  height: 100vh;
  background-color: ##ffffff;
  display: flex;
  flex-direction: column;
  position: relative;
}

.detail-content {
  flex: 1;
  height: 0;
}

.detail-body {
  padding: 24rpx 43rpx;
  padding-bottom: 24rpx;
}

.collect-button {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 0;
  min-width: 60rpx;
  flex-shrink: 0;
  margin-top: 10rpx;
}

.collect-icon-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.collect-icon {
  width: 76rpx;
  height: 76rpx;
  display: block;
  flex-shrink: 0;
}

.collect-text {
  font-size: 20rpx;
  color: #6b7280;
  line-height: 1;
}

.collect-text-active {
  color: #1d4ed8;
}

.detail-header-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 24rpx;
  margin-top: 5rpx;
  margin-bottom: 24rpx;
}

.detail-title-meta-wrapper {
  flex: 1;
  min-width: 0;
  max-width: calc(100% - 84rpx - 20rpx); /* 收藏按钮宽度60rpx + gap 24rpx + 换行阈值20rpx */
}

.detail-title-row {
  margin-bottom: 19rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #111827;
  display: block;
  line-height: 1.2;
  word-wrap: break-word;
  word-break: break-word;
}

.detail-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
}

.detail-meta-item {
  margin-right: 6rpx;
}

.detail-meta-dot {
  margin: 0 6rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 25rpx;
}

.detail-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 48rpx;
  border-radius: 999rpx;
  background-color: #e5f0ff;
}

.detail-tag-text {
  font-size: 24rpx;
  color: #1d4ed8;
}


.detail-description-wrapper {
  margin-bottom: 200rpx; /* 为底部控制栏留出足够空间 */
}

.detail-description {
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 28rpx; /* 增大圆角以匹配简历卡片风格 */
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  box-shadow: 0 8rpx 25rpx rgba(15, 23, 42, 0.10), 
              0 4rpx 8rpx rgba(15, 23, 42, 0.03);
}

.detail-description-rich {
  font-size: 27rpx;
  color: #111827;
  line-height: 1.84;
  user-select: text;
  -webkit-user-select: text;
}

.loading, .error {
  padding: 80rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #9ca3af;
}

/* 底部操作栏 (Dock) */
.apply-overlay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  /* 蒙版高度独立设置 */
  height: calc(230rpx + env(safe-area-inset-bottom, 0)); 
  background: linear-gradient(to top, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.9) 60%, rgba(255, 255, 255, 0) 100%);
  pointer-events: none;
}

.apply-dock-content {
  position: absolute;
  left: 0;
  right: 0;
  /* 按钮到底部的留白独立设置 */
  bottom: calc(5rpx + env(safe-area-inset-bottom, 0));
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto; /* 恢复按钮区域的点击 */
}

.apply-button {
  width: 45%; /* 按钮缩小10% (从50%到45%) */
  height: 83rpx; /* 按钮缩小10% (从92rpx到83rpx) */
  background: linear-gradient(135deg, #60a5fa 0%, #2563eb 100%); /* 浅蓝至深蓝渐变 */
  color: #ffffff;
  border-radius: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 10rpx 25rpx rgba(37, 99, 235, 0.2);
  transition: all 0.2s ease;
}

.apply-button-active {
  transform: scale(0.96);
  opacity: 0.95;
}

.apply-icon {
  width: 32rpx;
  height: 32rpx;
}

.apply-text {
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 功能抽屉 (Bottom Sheet) 局部调整 */
.apply-menu-scroll {
  max-height: 70vh;
  padding-bottom: 20rpx;
}

.apply-menu-content-padding {
  padding: 0 40rpx;
}

.apply-menu-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 30rpx;
}

.apply-menu-item {
  height: 110rpx;
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.2s ease;
}

.apply-menu-item:active {
  background: #f1f5f9;
  transform: scale(0.99);
}

.apply-menu-item-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.apply-menu-item-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #334155;
}

.apply-menu-icon-placeholder {
  font-size: 32rpx;
  width: 48rpx;
  text-align: center;
}

.apply-menu-item-icon {
  width: 48rpx;
  height: 48rpx;
}

/* AI 样式 */
.ai-section {
  background: #f1f5f9; /* 更中性的背景色 */
  padding: 24rpx;
  border-radius: 32rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.05);
}

.ai-item {
  background: #ffffff !important;
  border: 1rpx solid rgba(15, 23, 42, 0.05);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
}

.ai-text {
  color: #0f172a; /* 使用深藏青色，不再用亮蓝色 */
  font-weight: 600;
}

.ai-badge {
  display: none;
}

.apply-menu-safe-bottom {
  height: env(safe-area-inset-bottom, 0);
  margin-top: 10rpx;
}



