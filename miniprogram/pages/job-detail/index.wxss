/* miniprogram/pages/job-detail/index.wxss */
.page {
  height: 100vh;
  background-color: var(--bg-page);
  display: flex;
  flex-direction: column;
  position: relative;
}

.detail-content {
  flex: 1;
  height: 0;
}

.detail-body {
  padding: 24rpx 43rpx;
  padding-bottom: 24rpx;
}

.collect-button {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 0;
  min-width: 60rpx;
  flex-shrink: 0;
  margin-top: 10rpx;
}

.collect-icon-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.collect-icon {
  width: 76rpx;
  height: 76rpx;
  display: block;
  flex-shrink: 0;
  transition: transform 0.2s ease, filter 0.3s ease;
}

@media (prefers-color-scheme: dark) {
  .collect-icon {
    /* 降低未激活状态图标的亮度，使其在暗色背景下不刺眼 */
    filter: brightness(0.85);
  }
}

.collect-button:active .collect-icon {
  transform: scale(0.9);
}

.collect-text {
  font-size: 20rpx;
  color: var(--text-sub);
  line-height: 1;
}

.collect-text-active {
  color: var(--primary-dark);
}

.detail-header-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 24rpx;
  margin-top: 5rpx;
  margin-bottom: 24rpx;
}

.detail-title-meta-wrapper {
  flex: 1;
  min-width: 0;
  max-width: calc(100% - 84rpx - 20rpx); /* 收藏按钮宽度60rpx + gap 24rpx + 换行阈值20rpx */
}

.detail-title-row {
  margin-bottom: 19rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-main);
  display: block;
  line-height: 1.2;
  overflow-wrap: break-word;
  word-break: break-word;
}

.detail-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  font-size: 26rpx;
  color: var(--text-sub);
  line-height: 1.4;
}

.detail-meta-item {
  margin-right: 6rpx;
}

.detail-meta-dot {
  margin: 0 6rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 25rpx;
}

.detail-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 48rpx;
  border-radius: 999rpx;
  background-color: var(--primary-light);
}

.detail-tag-text {
  font-size: 24rpx;
  color: var(--primary-dark);
}


.detail-description-wrapper {
  margin-bottom: 120rpx; /* 减少35rpx，优化底部留白 */
}

.detail-description {
  padding: 32rpx;
  background-color: var(--bg-card);
  border-radius: 28rpx; /* 增大圆角以匹配简历卡片风格 */
  border: 1rpx solid var(--divider);
  box-shadow: var(--shadow-sm);
}

.detail-description-rich {
  font-size: 27rpx;
  color: var(--text-main);
  line-height: 1.84;
  user-select: text;
  user-select: text;
}

.loading, .error {
  padding: 80rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: var(--text-holder);
}

/* 底部操作栏 (Dock) */
/* 功能抽屉 (Bottom Sheet) 局部调整 */
.apply-menu-scroll {
  max-height: 70vh;
  padding-bottom: 20rpx;
}

.apply-menu-content-padding {
  padding: 0 40rpx;
}

.apply-menu-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 30rpx;
}

.apply-menu-item {
  height: 110rpx;
  background: var(--bg-page);
  border-radius: 24rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.2s ease;
}

.apply-menu-item:active {
  background: var(--border);
  transform: scale(0.99);
}

.apply-menu-item-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.apply-menu-item-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-main);
}

.apply-menu-icon-placeholder {
  font-size: 32rpx;
  width: 48rpx;
  text-align: center;
}

.apply-menu-item-icon {
  width: 48rpx;
  height: 48rpx;
}

/* AI 样式 */
.ai-section {
  background: var(--border); /* 更中性的背景色 */
  padding: 24rpx;
  border-radius: 32rpx;
  border: 1rpx solid var(--divider);
}

.ai-item {
  background: var(--bg-card) !important;
  border: 1rpx solid var(--divider);
  box-shadow: 0 4rpx 12rpx var(--shadow-sm);
}

.ai-text {
  color: var(--text-main); /* 使用深藏青色，不再用亮蓝色 */
  font-weight: 600;
}

.ai-badge {
  display: none;
}

.apply-menu-safe-bottom {
  height: env(safe-area-inset-bottom, 0);
  margin-top: 10rpx;
}



