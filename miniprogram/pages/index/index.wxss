.restore-item {
  position: relative;
  padding: 32rpx;
  margin-bottom: 2rpx;
  background: #fff;
  border-bottom: 1rpx solid var(--border);
  border-radius: 0;
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  will-change: transform, opacity;
  backface-visibility: hidden;
  backface-visibility: hidden;
  transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
}

.restore-item.restore-item-deleting {
  transform: translate3d(-100%, 0, 0);
  transform: translate3d(-100%, 0, 0);
  opacity: 0;
}

.restore-item.restore-item-collapsing {
  margin-bottom: 0;
  padding-top: 0;
  padding-bottom: 0;
  max-height: 0 !important;
  overflow: hidden;
}

.restore-item:active {
  background: #e5f0ff;
  border-color: var(--primary-dark);
}

.restore-item-editing:active {
  background: #f5f7fb;
  border-color: transparent;
}

.restore-item:last-child {
  margin-bottom: 0;
}

.restore-item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-right: 50rpx;
}

.restore-item-delete {
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
  width: 48rpx;
  height: 48rpx;
  min-height: 0;
  max-height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
  backface-visibility: hidden;
  backface-visibility: hidden;
  z-index: 10;
}

.restore-item-delete:active {
  transform: translate3d(0, -50%, 0) scale3d(0.95, 0.95, 1);
  transform: translate3d(0, -50%, 0) scale3d(0.95, 0.95, 1);
}

.restore-item-delete-icon {
  width: 40rpx;
  height: 40rpx;
  display: block;
}

.restore-item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.restore-item-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
}

