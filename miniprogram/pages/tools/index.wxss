.page {
  padding: 32rpx;
  background-color: var(--bg-page);
  min-height: 100vh;
}

.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-main);
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-sub);
}

.tools-grid {
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-sub);
  margin-bottom: 16rpx;
}

.input, .textarea {
  width: 100%;
  background: var(--bg-page);
  border: 2rpx solid var(--divider);
  border-radius: var(--radius-sm);
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 48rpx;
  color: var(--text-main);
}

.input {
  height: 78rpx; /* Line height 48rpx + 30rpx */
}

.textarea {
  height: 300rpx;
  padding: 15rpx 24rpx;
}

.placeholder {
  font-size: 28rpx;
  line-height: 48rpx;
  color: var(--text-holder);
}


.submit-btn.active {
  background: linear-gradient(135deg, #4979fc 0%, var(--primary) 100%);
  color: #fff;
  box-shadow: var(--shadow-md);
}

.submit-btn.active:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.ocr-review-drawer .bottom-sheet-content {
  background-color: var(--bg-page);
}
