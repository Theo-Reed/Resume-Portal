.page {
  padding: 32rpx;
  background-color: var(--bg-page);
  min-height: 100vh;
}

.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-main);
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-sub);
}

.tools-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.tool-card {
  background: var(--bg-card);
  border-radius: var(--radius-md);
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s;
}

.tool-card:active {
  transform: scale(0.98);
  background: var(--border);
}

.icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.icon-box.blue { background: var(--primary-light); }
.icon-box.purple { background: #f3e8ff; }
.icon-box.green { background: #f0fdf4; }

.tool-icon {
  width: 48rpx;
  height: 48rpx;
}

.tool-emoji {
  font-size: 44rpx;
}

.tool-info {
  flex: 1;
}

.tool-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  display: block;
  margin-bottom: 4rpx;
}

.tool-desc {
  font-size: 24rpx;
  color: var(--text-sub);
}

/* Drawer Styles */
.drawer-mask {
  position: fixed;
  inset: 0;
  background: rgb(0 0 0 / 50%);
  z-index: 1000;
}

.drawer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--bg-card);
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  padding-bottom: 35rpx;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.drawer-show {
  transform: translateY(0);
}

.drawer-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid var(--border);
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-main);
}

.close-btn {
  font-size: 40rpx;
  color: var(--text-holder);
  padding: 10rpx;
  line-height: 1;
}

.drawer-body {
  padding: 32rpx 32rpx 0;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-sub);
  margin-bottom: 16rpx;
}

.input, .textarea {
  width: 100%;
  background: var(--bg-page);
  border: 2rpx solid var(--divider);
  border-radius: var(--radius-sm);
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 48rpx;
  color: var(--text-main);
}

.input {
  height: 78rpx; /* Line height 48rpx + 30rpx */
}

.textarea {
  height: 300rpx;
  padding: 15rpx 24rpx;
}

.placeholder {
  font-size: 28rpx;
  line-height: 48rpx;
  color: var(--text-holder);
}

.submit-btn {
  background: var(--divider);
  color: var(--text-holder);
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 700;
  margin: 35rpx auto 0;
  padding: 15rpx 0;
  width: 35%;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.submit-btn.active {
  background: linear-gradient(135deg, #4979fc 0%, var(--primary) 100%);
  color: #fff;
  box-shadow: var(--shadow-md);
}

.submit-btn.active:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.ocr-review-drawer .bottom-sheet-content {
  background-color: var(--bg-page);
}
