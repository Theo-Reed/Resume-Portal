.ui-drawer-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.ui-drawer-mask.show {
  opacity: 1;
  visibility: visible;
}

.ui-drawer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
  transition: all 0.3s;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.ui-drawer-container.show {
  transform: translateY(0);
}

.ui-drawer-header {
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-bottom: 2rpx solid #f1f5f9;
}

.ui-drawer-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1e293b;
}

.ui-drawer-close {
  position: absolute;
  right: 32rpx;
  font-size: 36rpx;
  color: #94a3b8;
  padding: 10rpx;
}

.ui-drawer-content {
  flex: 1;
  overflow-y: auto;
}

.ui-drawer-footer {
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f1f5f9;
}
