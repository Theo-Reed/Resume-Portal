.ui-drawer-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.ui-drawer-mask.show {
  opacity: 1;
  visibility: visible;
}

.ui-drawer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.ui-drawer-container.show {
  transform: translateY(0);
}

.ui-drawer-header {
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  position: relative;
  border-bottom: 2rpx solid #f1f5f9;
}

.ui-drawer-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.ui-drawer-header-left, .ui-drawer-header-right {
  min-width: 100rpx;
  display: flex;
  align-items: center;
}

.ui-drawer-header-right {
  justify-content: flex-end;
}

.ui-drawer-close {
  font-size: 32rpx;
  color: #94a3b8;
  padding: 10rpx;
}

.ui-drawer-confirm-btn {
  font-size: 30rpx;
  font-weight: 600;
  color: #2e5fe9;
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ui-drawer-confirm-btn.loading {
  opacity: 0.6;
}

.ui-drawer-loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #2e5fe9;
  border-top-color: transparent;
  border-radius: 50%;
  animation: ui-drawer-spin 0.8s linear infinite;
}

@keyframes ui-drawer-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.ui-drawer-content {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
