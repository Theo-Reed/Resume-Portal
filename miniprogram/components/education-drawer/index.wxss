/* miniprogram/components/education-drawer/index.wxss */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.drawer-mask-open {
  opacity: 1;
  pointer-events: auto;
}

.drawer-content {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 85%;
  background: #ffffff;
  z-index: 1001;
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  box-shadow: -10rpx 0 30rpx rgba(0, 0, 0, 0.05);
  border-top-left-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
}

.drawer-open {
  transform: translateX(0);
}

.drawer-header {
  padding: 40rpx 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f1f5f9;
}

.drawer-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  position: relative;
  width: 32rpx;
  height: 32rpx;
}

.close-icon::before, .close-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #94a3b8;
  border-radius: 2rpx;
}

.close-icon::before {
  transform: rotate(45deg);
}

.close-icon::after {
  transform: rotate(-45deg);
}

.drawer-body {
  flex: 1;
  padding: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
}

.form-picker {
  width: 100%;
  height: 88rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #1e293b;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.placeholder {
  color: #94a3b8;
}

.date-range-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date-picker {
  flex: 1;
  height: 88rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #1e293b;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.date-sep {
  color: #94a3b8;
  font-weight: 600;
}

.drawer-footer {
  padding: 40rpx;
  display: flex;
  gap: 24rpx;
  border-top: 1rpx solid #f1f5f9;
}

.btn-save {
  flex: 1;
  height: 96rpx;
  background: #3B82F6;
  color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  margin: 0;
  border: none;
}

.btn-delete {
  flex: 0 0 200rpx;
  height: 96rpx;
  background: #fef2f2;
  color: #ef4444;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  margin: 0;
  border: none;
}

