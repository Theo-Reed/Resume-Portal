/* miniprogram/components/drawer/index.wxss */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1999;
}

.drawer-menu {
  position: fixed;
  top: 0;
  left: -80%; /* Start off-screen */
  width: 80%;
  height: 100%;
  background-color: #ffffff;
  z-index: 2000;
  transition: left 0.3s ease;
  box-shadow: 2rpx 0 10rpx rgba(0, 0, 0, 0.1);
}

.drawer-open {
  left: 0; /* Slide in */
}

.drawer-header {
  padding: 40rpx;
  border-bottom: 1rpx solid #eee;
}

.user-row {
  display: flex;
  align-items: center;
  height: 100rpx;
}

.user-text {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.nickname-box {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
  margin: 0;
  padding: 0;
}

.nickname-login {
  color: #1d4ed8;
}

.nickname-login-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  margin-left: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #1d4ed8;
  display: inline-flex;
  align-items: center;
  line-height: 1;
}

.phone-auth-name-btn {
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  height: auto;
  width: auto;
  line-height: 1.2;
}

.phone-auth-name-btn::after {
  border: none;
}

.drawer-list {
  padding: 24rpx 0;
}

.drawer-item {
  padding: 28rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.drawer-item-text {
  font-size: 30rpx;
  color: #333;
}

.phone-auth-btn {
  display: none;
}

.auth-overlay {
  display: none;
}

/* cleanup old overlay styles */
.user-row-wrapper { display: none; }
.user-row-overlay-btn { display: none; }

.avatar,
.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 18rpx;
  overflow: hidden;
}

.avatar-placeholder {
  background-color: #e0e0e0;
}
