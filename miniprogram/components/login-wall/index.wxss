/* Global Container */
.login-wall {
  --anchor-y: 45.45vh;
  
  /* --- 新增：大厂级 Mascot 引擎变量 --- */
  --star-x: 50vw;
  --star-y: var(--anchor-y);
  --star-size: 40vw; /* 初始值对齐开屏，防止初始跳变 */
  --star-opacity: 1;
  --star-scale: 1;
  
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  display: none;
  opacity: 0;
  background: transparent;
  /* 背景蒙版淡出：1.5秒，加速曲线 */
  transition: opacity 1.5s cubic-bezier(0.55, 0.055, 0.675, 0.19);
}

.login-wall.visible {
  display: block !important;
  opacity: 1 !important;
}

/* 整体淡出流程 */
.login-wall.wall-fade-out {
  opacity: 0;
  pointer-events: none;
}

/* --- Mascot 独立物理层 --- */
.mascot-container {
  position: absolute;
  z-index: 1001;
  /* 坐标投射：基于变量精确控制位姿 */
  left: var(--star-x);
  top: var(--star-y);
  width: var(--star-size);
  height: var(--star-size);
  opacity: var(--star-opacity);
  /* 核心修复：使用百分比平移替代复杂的 calc 偏移，彻底消除尺寸变化时的位置跳变 */
  transform: translate3d(-50%, -50%, 0) scale(var(--star-scale));
  
  /* 关键：所有物理属性共用同一套高精度过渡 */
  transition: 
    transform 0.8s cubic-bezier(0.23, 1, 0.32, 1),
    left 0.8s cubic-bezier(0.23, 1, 0.32, 1),
    top 0.8s cubic-bezier(0.23, 1, 0.32, 1),
    width 0.8s cubic-bezier(0.23, 1, 0.32, 1),
    height 0.8s cubic-bezier(0.23, 1, 0.32, 1),
    opacity 0.8s ease;
    
  will-change: transform, left, top, opacity, width, height;
  pointer-events: none;
}

/* 针对最终淡出阶段，星星用 1.3 秒，加速曲线 */
.login-wall.s-hidden .mascot-container {
  transition: 
    opacity 1.3s cubic-bezier(0.55, 0.055, 0.675, 0.19),
    transform 1.3s cubic-bezier(0.55, 0.055, 0.675, 0.19),
    left 1.3s cubic-bezier(0.55, 0.055, 0.675, 0.19),
    top 1.3s cubic-bezier(0.55, 0.055, 0.675, 0.19) !important;
}

.mascot-inner {
  width: 100%;
  height: 100%;
  /* 默认保持呼吸 */
  animation: ai-breathe 4s infinite ease-in-out;
}

/* 老用户逻辑：强制星星在任何阶段（包括淡出阶段）都保持呼吸态 */
.login-wall.sm-old .mascot-inner {
  animation-play-state: running !important;
}

/* 停止呼吸：当进入消失阶段（只有新用户状态），停止呼吸以保持静态美 */
.login-wall.s-hidden.sm-new .mascot-inner {
  animation-play-state: paused !important;
}

.ai-star-view {
  width: 100%;
  height: 100%;
  display: block;
  filter: drop-shadow(0 0 15rpx rgba(46, 95, 233, 0.4));
}

@keyframes ai-breathe {
  0%, 100% { transform: scale(0.95) rotate(-2deg); }
  50% { transform: scale(1.05) rotate(2deg); }
}

/* --- 场景定义 (Scene Setters) --- */

/* Scene: Splash (开屏) */
.login-wall.s-splash {
  --star-x: 50vw;
  --star-y: var(--anchor-y);
  --star-size: 40vw; 
  --star-opacity: 1;
}

/* Scene: Login Card (登录卡片 - 默认逻辑：缩小并移动到 Logo 位) */
.login-wall.s-login {
  --star-x: calc(11vw + 72rpx + 10rpx);
  --star-y: calc(var(--anchor-y) - 130rpx); 
  --star-size: 160rpx;
  --star-opacity: 1;
}

/* Loading 状态：默认保持在 Logo 位进行加载 */
.login-wall.s-loading {
  --star-x: calc(11vw + 72rpx + 10rpx);
  --star-y: calc(var(--anchor-y) - 130rpx); 
  --star-size: 160rpx;
  --star-opacity: 1;
}

/* Scene: Success (注册成功 - 新用户展示 30vw 居中) */
.login-wall.s-success {
  --star-x: 50vw;
  --star-y: var(--anchor-y);
  --star-size: 30vw;
  --star-opacity: 1;
}

/* Scene: Login Success (登录成功 - 老用户逻辑由 sm-old 锁死) */
.login-wall.s-login-success {
  --star-x: 50vw;
  --star-y: var(--anchor-y); 
  --star-size: 40vw; 
  --star-opacity: 1;
}

/* --- 背景状态持久化锁 (彻底隔离新老用户逻辑) --- */

/* 1. 注册/新用户路径：强化仪式感 */
.login-wall.sm-new .glass-mask,
.login-wall.s-success .glass-mask {
  background: rgba(255, 255, 255, 0) !important;
  /* 优化：减弱模糊半径，从 30px 改为 12px，让底图更清晰，质感更通透 */
  backdrop-filter: blur(12px) !important; 
  -webkit-backdrop-filter: blur(12px) !important;
}

/* 新用户在 s-success 阶段，确保大小居中 */
.login-wall.sm-new.s-success .mascot-container,
.login-wall.sm-new.s-hidden .mascot-container {
  left: 50vw !important;
  top: var(--anchor-y) !important;
  width: 30vw !important;
  height: 30vw !important;
}

/* 2. 登录/老用户路径：全程“巨星”锁定 (40vw 居中不动) */
.login-wall.sm-old .glass-mask,
.login-wall.s-login-success .glass-mask {
  background: #ffffff !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
}

/* 老用户强锁定：彻底隔离，忽略所有 s-login/s-loading 的位移规则 */
.login-wall.sm-old .mascot-container {
  left: 50vw !important;
  top: var(--anchor-y) !important;
  width: 40vw !important;
  height: 40vw !important;
  transform: translate3d(-50%, -50%, 0) !important;
}

/* 登录用户淡出阶段：仅淡出，原位不动 */
.login-wall.sm-old.s-hidden .mascot-container {
  transition: opacity 1.3s cubic-bezier(0.55, 0.055, 0.675, 0.19) !important;
}

/* 登录输入 & Loading 阶段：半透明毛玻璃，增加卡片对比度 */
.login-wall.s-login .glass-mask,
.login-wall.s-loading .glass-mask {
  background: rgba(255, 255, 255, 0.4) !important;
  backdrop-filter: blur(12px) !important;
  -webkit-backdrop-filter: blur(12px) !important;
}

/* Background Layer */
.glass-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  background: #ffffff; 
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
  transition: background 1.2s ease, backdrop-filter 1.2s ease;
}

/* 强制覆盖 Tabbar：确保淡出过程遮挡底部 */
.login-wall.wall-fade-out {
  opacity: 0 !important;
  pointer-events: none;
  z-index: 999999 !important; /* 提到最高层级 */
}
.splash-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: opacity 0.5s ease;
  z-index: 2;
  pointer-events: none;
}

.splash-content.fade-out {
  opacity: 0;
}


/* --- Phase 2: Login Card --- */
.login-card {
  position: fixed; 
  left: 50%;
  top: var(--anchor-y); /* 使用全局锚点变量 */
  /* 使用 -50% 让卡片自身的中轴线对齐锚点 */
  transform: translate(-50%, -40%); 
  
  width: 78vw; 
  background: rgba(255, 255, 255, 0.82); 
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  
  border-radius: 64rpx;
  padding: 64rpx 48rpx 40rpx 48rpx; /* 减少底部内边距 */
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.15);
  
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  pointer-events: none;
  z-index: 10;
  display: flex;
  flex-direction: column;
}

.login-card.show {
  opacity: 1;
  transform: translate(-50%, -50%); /* 最终落位在 5/11 处 */
  pointer-events: auto;
}

/* 授权成功，整体渐渐淡出 */
.login-card.hide-all {
  opacity: 0 !important;
  pointer-events: none;
  /* 不移动，保持在原地 */
  transform: translate(-50%, -50%) !important;
}

/* 内部内容淡出逻辑 */
.card-inner-content {
  opacity: 1;
  transition: opacity 0.5s ease;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.card-inner-content.content-fade-out {
  opacity: 0;
  pointer-events: none;
}

/* Provide space for the shared lottie engine */
.logo-placeholder {
  width: 140rpx; /* Slightly smaller than canvas to feel snug */
  height: 140rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  /* Invisible space */
}

/* Status Banner */
.status-banner {
  height: 0;
  overflow: hidden;
  background: #fef2f2;
  border-radius: 24rpx;
  margin-bottom: 0;
  transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
  opacity: 0;
}

.status-banner.active {
  height: 80rpx;
  margin-bottom: 30rpx;
  opacity: 1;
}

.banner-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.banner-text {
  font-size: 24rpx;
  color: #991b1b;
  font-weight: 500;
}

/* Card Header */
.card-header {
  display: flex !important;
  align-items: center !important;
  margin-bottom: 30rpx !important; /* 从 50rpx 减少到 30rpx，压缩标题下方间距 */
  flex-direction: row !important;
}

.title-group {
  text-align: left !important;
}

.main-title {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.sub-title {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

/* Form */
.auth-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding: 20rpx 0;
}

.auth-tips {
  text-align: center;
}

.tips-text {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
}

.phone-btn {
  gap: 16rpx;
}

.btn-icon {
  width: 44rpx;
  height: 44rpx;
}

.auth-desc {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
}

.primary-btn {
  width: 100% !important;
  height: 110rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
  color: #ffffff !important;
  border-radius: 32rpx !important;
  font-size: 32rpx !important;
  font-weight: 700 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin-top: 0rpx !important;
  box-shadow: 0 20rpx 40rpx rgba(37, 99, 235, 0.2) !important;
}

.card-footer {
  margin-top: 35rpx;
  padding-bottom: 12rpx;
  text-align: center;
}

.protocol {
  font-size: 22rpx;
  color: #94a3b8;
}

/* Animations */
@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes wave {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.3; }
  40% { transform: scale(1.5); opacity: 1; }
}

.error-layer {
  display: none !important;
}
