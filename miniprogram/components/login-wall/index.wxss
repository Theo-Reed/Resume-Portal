/* Global Container */
.login-wall {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  visibility: hidden;
  pointer-events: none;
  display: flex !important;
  align-items: center;
  justify-content: center;
}

.login-wall.visible {
  visibility: visible;
  pointer-events: auto;
}

/* Background Layer */
.glass-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #ffffff; /* Revert to White as requested */
  transition: all 0.8s ease;
  z-index: 0;
  opacity: 1;
}

.glass-mask.fade-out {
  opacity: 0;
}

/* --- Shared Animated Lottie (The Engine ðŸŽ¨) --- */
.shared-globe {
  position: fixed;
  z-index: 20;
  transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.lottie-canvas {
  width: 100%;
  height: 100%;
}

.ai-star-container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-star {
  width: 90%;
  height: 90%;
  animation: ai-breathe 4s infinite cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
}

@keyframes ai-breathe {
  0%, 100% { transform: scale(1) rotate(-2deg); filter: brightness(1); }
  50% { transform: scale(1.1) rotate(2deg); filter: brightness(1.2) drop-shadow(0 0 15rpx rgba(168, 85, 247, 0.5)); }
}

/* State 1: Splash (Centered, Large) */
.shared-globe.splash {
  width: 500rpx;
  height: 500rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* State 2: Login (Top-Left of Card, Small) */
.shared-globe.login {
  width: 160rpx;
  height: 160rpx;
  top: calc(25vh + 40rpx); 
  left: calc(7vw + 30rpx); 
  transform: translate(0, 0);
}

/* State 3: Hidden (Success Fade Out) */
.shared-globe.hidden {
  opacity: 0;
  transform: scale(0.8);
  pointer-events: none;
}


/* --- Phase 1: Splash Content --- */
.splash-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: opacity 0.5s ease;
  z-index: 2;
  pointer-events: none;
}

.splash-content.fade-out {
  opacity: 0;
}


/* --- Phase 2: Login Card --- */
.login-card {
  position: fixed; /* Fixed position to match logo calculation */
  top: 25vh; /* Fixed top anchor */
  left: 50%;
  transform: translateX(-50%) translateY(40rpx); /* Start slightly lower */
  
  width: 86vw; /* 645rpx */
  background: #ffffff; /* Card needs its own background when mask fades? No, if mask fades, card should stay? 
                         Wait, if login state, mask stays (but might become semi-transparent?).
                         Actually, in login state, we want a clean background. */
  border-radius: 60rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 50rpx 150rpx rgba(0, 0, 0, 0.1);
  
  opacity: 0;
  transition: all 0.6s ease-out;
  pointer-events: none;
  z-index: 10;
  display: flex;
  flex-direction: column;
}

.login-card.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
  pointer-events: auto;
}

/* Provide space for the shared lottie engine */
.logo-placeholder {
  width: 140rpx; /* Slightly smaller than canvas to feel snug */
  height: 140rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  /* Invisible space */
}

/* Status Banner */
.status-banner {
  height: 0;
  overflow: hidden;
  background: #fef2f2;
  border-radius: 24rpx;
  margin-bottom: 0;
  transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
  opacity: 0;
}

.status-banner.active {
  height: 80rpx;
  margin-bottom: 30rpx;
  opacity: 1;
}

.banner-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.banner-text {
  font-size: 24rpx;
  color: #991b1b;
  font-weight: 500;
}

/* Card Header */
.card-header {
  display: flex !important;
  align-items: center !important;
  margin-bottom: 50rpx !important;
  flex-direction: row !important;
}

.title-group {
  text-align: left !important;
}

.main-title {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.sub-title {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

/* Form */
.tab-switcher {
  display: flex;
  background: #f1f5f9;
  padding: 8rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #64748b;
  border-radius: 18rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #ffffff;
  color: #2563eb;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.input-row {
  margin-bottom: 24rpx;
}

.f-input {
  height: 110rpx;
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  border: 2rpx solid #e2e8f0;
}

.primary-btn {
  width: 100% !important;
  height: 110rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
  color: #ffffff !important;
  border-radius: 32rpx !important;
  font-size: 32rpx !important;
  font-weight: 700 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin-top: 20rpx !important;
  box-shadow: 0 20rpx 40rpx rgba(37, 99, 235, 0.2) !important;
}

.card-footer {
  margin-top: 40rpx;
  text-align: center;
}

.protocol {
  font-size: 22rpx;
  color: #94a3b8;
}

/* Animations */
@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes wave {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.3; }
  40% { transform: scale(1.5); opacity: 1; }
}

.error-layer {
  display: none !important;
}
