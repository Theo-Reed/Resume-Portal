/* Global Container */
.login-wall {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  visibility: hidden;
  pointer-events: none;
  display: flex !important;
  align-items: center;
  justify-content: center;
}

.login-wall.visible {
  visibility: visible;
  pointer-events: auto;
}

/* Background Layer */
.glass-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #ffffff; /* Solid White */
  transition: opacity 0.8s ease;
  z-index: 0;
  opacity: 1;
}

.glass-mask.fade-out {
  opacity: 0; /* Fade out only when hidden */
}

/* --- Shared Animated Globe (The Earth üåç) --- */
.shared-globe {
  position: fixed;
  z-index: 20;
  border-radius: 50%;
  overflow: hidden;
  background: #3b82f6;
  transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: 0 40rpx 100rpx rgba(37, 99, 235, 0.3);
}

/* Water Layer */
.globe-water {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: radial-gradient(circle at 30% 30%, #4facfe 0%, #0061ff 100%);
}

/* Land Layer (Simulated with repeating CSS pattern) */
.globe-land {
  position: absolute;
  top: 0; left: 0; width: 200%; height: 100%;
  /* High-end continental shapes */
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="200" height="100"><path d="M30,20 Q50,5 70,30 T110,20 T150,40 T190,20" fill="none" stroke="rgba(255, 255, 255, 0.3)" stroke-width="25" stroke-linecap="round"/><path d="M10,60 Q40,45 60,70 T100,60 T140,80 T180,60" fill="none" stroke="rgba(255, 255, 255, 0.2)" stroke-width="20" stroke-linecap="round"/></svg>');
  background-repeat: repeat-x;
  background-size: 50% 100%;
  animation: rotate-globe 15s linear infinite;
}

/* Glossy Shine & Shadow */
.globe-shine {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.4) 0%, rgba(0,0,0,0) 50%, rgba(0,0,0,0.5) 100%);
  box-shadow: inset -10rpx -10rpx 30rpx rgba(0,0,0,0.3);
}

/* State 1: Splash (Centered, Large) */
.shared-globe.splash {
  width: 220rpx;
  height: 220rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: globe-breathe 4s ease-in-out infinite;
}

/* State 2: Login (Top-Left of Card, Small) */
.shared-globe.login {
  width: 100rpx;
  height: 100rpx;
  top: calc(25vh + 64rpx); 
  left: 100.5rpx; 
  transform: translate(0, 0);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* State 3: Hidden (Success Fade Out) */
.shared-globe.hidden {
  opacity: 0;
  transform: scale(0.8);
  pointer-events: none;
}

/* Transition keyframes */
@keyframes rotate-globe {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

@keyframes globe-breathe {
  0%, 100% { transform: translate(-50%, -50%) scale(1); }
  50% { transform: translate(-50%, -50%) scale(1.05); }
}


/* --- Phase 1: Splash Content --- */
.splash-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: opacity 0.5s ease;
  z-index: 2;
  pointer-events: none;
}

.splash-content.fade-out {
  opacity: 0;
}


/* --- Phase 2: Login Card --- */
.login-card {
  position: fixed; /* Fixed position to match logo calculation */
  top: 25vh; /* Fixed top anchor */
  left: 50%;
  transform: translateX(-50%) translateY(40rpx); /* Start slightly lower */
  
  width: 86vw; /* 645rpx */
  background: #ffffff; /* Card needs its own background when mask fades? No, if mask fades, card should stay? 
                         Wait, if login state, mask stays (but might become semi-transparent?).
                         Actually, in login state, we want a clean background. */
  border-radius: 60rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 50rpx 150rpx rgba(0, 0, 0, 0.1);
  
  opacity: 0;
  transition: all 0.6s ease-out;
  pointer-events: none;
  z-index: 10;
  display: flex;
  flex-direction: column;
}

.login-card.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
  pointer-events: auto;
}

/* Provide space for the shared logo */
.logo-placeholder {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  /* Invisible, just takes up space */
}

/* Status Banner */
.status-banner {
  height: 0;
  overflow: hidden;
  background: #fef2f2;
  border-radius: 24rpx;
  margin-bottom: 0;
  transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
  opacity: 0;
}

.status-banner.active {
  height: 80rpx;
  margin-bottom: 30rpx;
  opacity: 1;
}

.banner-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.banner-text {
  font-size: 24rpx;
  color: #991b1b;
  font-weight: 500;
}

/* Card Header */
.card-header {
  display: flex !important;
  align-items: center !important;
  margin-bottom: 50rpx !important;
  flex-direction: row !important;
}

.logo-box {
  width: 100rpx !important;
  height: 100rpx !important;
  background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
  color: #ffffff !important;
  border-radius: 28rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-weight: 800 !important;
  font-size: 40rpx !important;
  margin-right: 30rpx !important;
  margin-bottom: 0 !important;
}

.title-group {
  text-align: left !important;
}

.main-title {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.sub-title {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

/* Form */
.tab-switcher {
  display: flex;
  background: #f1f5f9;
  padding: 8rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #64748b;
  border-radius: 18rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #ffffff;
  color: #2563eb;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.input-row {
  margin-bottom: 24rpx;
}

.f-input {
  height: 110rpx;
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  border: 2rpx solid #e2e8f0;
}

.primary-btn {
  width: 100% !important;
  height: 110rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
  color: #ffffff !important;
  border-radius: 32rpx !important;
  font-size: 32rpx !important;
  font-weight: 700 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin-top: 20rpx !important;
  box-shadow: 0 20rpx 40rpx rgba(37, 99, 235, 0.2) !important;
}

.card-footer {
  margin-top: 40rpx;
  text-align: center;
}

.protocol {
  font-size: 22rpx;
  color: #94a3b8;
}

/* Animations */
@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes wave {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.3; }
  40% { transform: scale(1.5); opacity: 1; }
}

.error-layer {
  display: none !important;
}
