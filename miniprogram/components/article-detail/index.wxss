/* miniprogram/components/article-detail/index.wxss */
.detail-drawer {
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  z-index: 3000;
  box-shadow: -2rpx 0 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  /* Enable hardware acceleration for smooth animation */
  will-change: transform;
  /* Transform is controlled by inline style */
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.detail-drawer-open {
  /* Class is used for state tracking, transform is controlled by inline style */
}

.detail-drawer-swiping {
  transition: none !important; /* Disable transition during swipe for smooth dragging */
}

/* When not swiping, enable smooth transition for transform */
.detail-drawer:not(.detail-drawer-swiping) {
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 关闭按钮 - 浮现在系统导航栏左侧 */
.drawer-close-button {
  position: fixed;
  left: 0;
  top: 0;
  width: 120rpx;
  height: 88rpx;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  opacity: 0;
  transform: translateX(-20rpx);
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
}

.drawer-close-button-visible {
  opacity: 1;
  transform: translateX(0);
  pointer-events: auto;
}

.drawer-close-icon {
  width: 16rpx;
  height: 16rpx;
  border-left: 5rpx solid #111827;
  border-bottom: 5rpx solid #111827;
  transform: rotate(45deg);
  margin-left: 40rpx;
}

.drawer-close-icon::after {
  content: '';
}

.detail-content {
  flex: 1;
  height: 0;
  padding-top: env(safe-area-inset-top);
}

.detail-body {
  padding: 24rpx 43rpx;
}

.article-detail-content {
  /* Rich text content styles */
}

.loading, .error {
  padding: 80rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #9ca3af;
}

