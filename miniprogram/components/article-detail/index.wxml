<!--miniprogram/components/article-detail/index.wxml-->
<view 
  wx:if="{{show}}"
  class="detail-drawer detail-drawer-open {{isSwiping ? 'detail-drawer-swiping' : ''}}"
  style="transform: translate3d({{drawerTranslateX}}px, 0, 0);"
  animation="{{animationData}}"
  bindtouchstart="onTouchStart"
  catchtouchmove="onTouchMove"
  bindtouchend="onTouchEnd"
>
  <!-- 关闭按钮 -->
  <view 
    wx:if="{{closeButtonVisible}}" 
    class="drawer-close-button {{closeButtonVisible ? 'drawer-close-button-visible' : ''}}"
    style="top: {{closeButtonTop}}px;"
    bindtap="onClose"
  >
    <view class="drawer-close-icon"></view>
  </view>
  
  <scroll-view     
    class="detail-content" 
    scroll-y="{{!isSwiping}}"
    enhanced="{{true}}" 
    show-scrollbar="{{false}}"
    upper-threshold="0"
    bounces="{{false}}"
    bindscroll="onScrollViewScroll"
  >
    <block wx:if="{{article}}">
      <view class="detail-body">
        <view class="article-detail-content">
          <rich-text wx:if="{{htmlNodes}}" nodes="{{htmlNodes}}" />
          <view wx:else class="error">{{contentEmptyText}}</view>
        </view>
      </view>
    </block>
    <block wx:elif="{{loading}}">
      <view class="loading">{{loadingText}}</view>
    </block>
    <block wx:else>
      <view class="error">{{loadFailedText}}</view>
    </block>
  </scroll-view>
</view>

