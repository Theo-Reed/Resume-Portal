.ui-feedback {
  position: fixed;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  opacity: 0;
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
}

.ui-visible {
  opacity: 1;
}

.ui-mask {
  background: rgb(255 255 255 / 40%);
  backdrop-filter: blur(15rpx);
  backdrop-filter: blur(15rpx);
  pointer-events: auto;
}

.ui-content {
  background: rgb(255 255 255 / 95%);
  padding: 48rpx 64rpx;
  border-radius: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 40rpx 100rpx rgb(0 0 0 / 8%);
  min-width: 300rpx;
  max-width: 85%;
  transform: translateY(40rpx) scale(0.9);
  
  /* Exit transition: reset transform AFTER opacity fade (0.3s) acts */
  /* This prevents the "flying out" movement when hiding */
  transition: transform 0s 0.3s;
}

.ui-visible .ui-content {
  transform: translateY(0) scale(1);
  /* Enter transition: pop in effect */
  transition: transform 0.4s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

/* --- Spinner Styles --- */
.ui-loading-spinner {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ui-spinner-ring {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid var(--border);
  border-top: 6rpx solid #2e5fe9;
  border-radius: 50%;
  animation: spin 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* --- Icon Styles --- */
.ui-icon-success {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 28rpx;
  position: relative;
  border: 5rpx solid #2e5fe9;
  border-radius: 50%;
  animation: icon-pop 0.4s cubic-bezier(0.18, 0.89, 0.32, 1.28);
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes icon-pop {
  0% { transform: scale(0.5); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

.ui-check {
  width: 18rpx;
  height: 34rpx;
  border-right: 5rpx solid #2e5fe9;
  border-bottom: 5rpx solid #2e5fe9;
  transform: rotate(45deg);
  margin-top: -10rpx;
  margin-left: 2rpx;
}

.ui-icon-error {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 28rpx;
  position: relative;
  border: 5rpx solid #ef4444;
  border-radius: 50%;
  animation: icon-shake 0.4s ease-in-out;
}

@keyframes icon-shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.ui-error-line {
  position: absolute;
  width: 40rpx; height: 4rpx;
  background: #ef4444;
  left: 20rpx; top: 38rpx;
}

.ui-error-line-1 { transform: rotate(45deg); }
.ui-error-line-2 { transform: rotate(-45deg); }

/* --- Text Styles --- */
.ui-message {
  font-size: 30rpx;
  color: var(--text-main);
  font-weight: 700;
  text-align: center;
  line-height: 1.4;
}

